<Alloy>
	<Collection src="news" />
	<View id="news" title="News" class="container">
		<ActivityIndicator id="activityIndicator" message="Loading..."/>
		<ListView id="table" defaultItemTemplate="newsRow" onItemclick="openDetail">
			<Templates>
				<ItemTemplate name="newsRow">
					<View class="newsRow">
						<Label class="titleLabel" bindId="title" />
						<Label class="postDateLabel" bindId="date" />
					</View>
				</ItemTemplate>
			</Templates>
		</ListView>
	</View>
</Alloy>