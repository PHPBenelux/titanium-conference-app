<Alloy>
	<Window id="scheduleDetailWindow" title="Schedule item">
        <ScrollView class="detailScroll">
			<Label id="titleLabel" class="header">Title</Label>
			<Label id="descriptionLabel" class="content"></Label>
			
			<Label id="nameLabel" class="header">Speaker</Label>
			<ImageView id="pictureView"></ImageView>
			<Label id="bioLabel" class="content"></Label>
			
			<View class="metadata">
				<Label id="dateLabel" class="metalabel">Date / Time</Label>
				<Label id="roomLabel" class="metalabel">Room</Label>
				<Label id="levelLabel" class="metalabel">Level</Label>
				<Label id="typeLabel" class="metalabel">Session type</Label>
			</View>
		</ScrollView>
	</Window>
</Alloy>